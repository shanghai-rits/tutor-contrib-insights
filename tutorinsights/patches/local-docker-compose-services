insights:
  image: {{ INSIGHTS_DOCKER_IMAGE }}
  depends_on:
    - analyticsapi
    - mysql
    - lms
  environment:
      DB_HOST: {{ MYSQL_HOST }}
      DB_NAME: {{ INSIGHTS_DASHBOARD_MYSQL_DATABASE }}
      DB_PORT: {{ MYSQL_PORT }}
      DB_USER: {{ INSIGHTS_MYSQL_USER }}
      DB_PASSWORD: {{ INSIGHTS_MYSQL_PASSWORD }}
      LMS_HOST: {{ LMS_HOST }}
      DJANGO_SETTINGS_MODULE: analytics_dashboard.settings.tutor.production
  
  volumes:
    - ../plugins/insights/apps/insights:/openedx/analytics_dashboard/analytics_dashboard/settings/tutor:ro

analyticsapi:
  image: {{ INSIGHTS_ANALYTICSAPI_DOCKER_IMAGE }}
  depends_on:
    - mysql
    - elasticsearch
  environment:
    DB_HOST: {{ MYSQL_HOST }}
    DB_PORT: {{ MYSQL_PORT }}
    DB_USER: {{ INSIGHTS_MYSQL_USER }}
    DB_PASSWORD: {{ INSIGHTS_MYSQL_PASSWORD }}
    ELASTICSEARCH_LEARNERS_HOST: {{ ELASTICSEARCH_HOST }}
  volumes:
    - ../plugins/insights/apps/analyticsapi:/openedx/analytics_api/analyticsdataserver/settings/tutor:ro